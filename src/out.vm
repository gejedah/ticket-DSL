<html>
  <head>
    <title>Ticket</title>
    <style>body{
                        background:none;
                    }

                    .container {
                        width:960px;
                        margin:auto;
                    }

                            .logo, .logo img {
                        width:200px;
                    }
                    .logo{
                        margin:auto;
                    }
                    .brand {
                        text-align: center;
                        color:red;
                        margin:0;
                    }
                    .tagline {
                        text-align:center;
                        margin:0;
                    }
                    .clear{clear:both;}
                            .booking-details-label, .passenger-details-label, .itinerary-details-label, .payment-details-label, .notice-label{border-bottom: 1px solid;}
                            #passenger-details-table-header, #itinerary-details-table-header{text-align:left;}
                            .payment-table-right-column{text-align: right;}</style>
  </head>
  <body>
    <div class='container'>
      <div class='logo'>
        <img src='logo.png' alt='Logo' align='middle' />
        <h1 class='brand required' id='companyName'>$companyName</h1>
        <p class='tagline required' id='motto'>
          <strong>$motto</strong>
        </p>
      </div>
      <div class='clear' />
      <div class='booking details'>
        <h3 class='booking-details-label'>Booking Details</h3>
        <table width='100%'>
          <tr>
            <td>Agent Name</td>
            <td class='required' id='agentName'>$agentName</td>
            <td>Issued Date</td>
            <td class='required' id='issuedDate'>$issuedDate</td>
          </tr>
          <tr>
            <td>Booking Reference</td>
            <td>
              <strong class='required' id='bookRef'>$bookRef</strong>
            </td>
          </tr>
        </table>
      </div>
      <div class='passenger-details'>
        <h3 class='passenger-details-label'>Passenger Details</h3>
        <table width='100%'>
          <tr id='passenger-details-table-header'>
            <th>Name</th>
            <th>eTicket Number</th>
          </tr>
          <tr>
            <td class='looping-required' id='passengerName'>$passengerName</td>
            <td class='looping-required' id='eTicketNum'>$eTicketNum</td>
          </tr>
        </table>
      </div>
      <div class='itinerary-details'>
        <h3 class='itinerary-details-label'>Itenarary Details</h3>
        <table width='100%'>
          <tr id='itinerary-details-table-header'>
            <th>Date</th>
            <th>Flight</th>
            <th>Depart Airport</th>
            <th>Arrive Airport</th>
            <th>Depart Time</th>
            <th>Arrive Time</th>
            <th>Class</th>
            <th>Bagg.</th>
          </tr>
          <tr>
            <td class='looping-required' id='Date'>$Date</td>
            <td class='looping-required' id='Flight'>$Flight</td>
            <td class='looping-required' id='DepartAirport'>$DepartAirport</td>
            <td class='looping-required' id='ArriveAirport'>$ArriveAirport</td>
            <td class='looping-required' id='DepartTime'>$DepartTime</td>
            <td class='looping-required' id='Arrivetime'>$Arrivetime</td>
            <td class='looping-required' id='Class'>$Class</td>
            <td class='looping-required' id='Baggage'>$Baggage</td>
          </tr>
        </table>
      </div>
      <div class='payment-details'>
        <h3 class='payment-details-label'>Payment Details</h3>
        <table width='100%'>
          <tr>
            <td class='payment-table-left-column'>Nett Fare</td>
            <td class='payment-table-right-column required' id='paymentNett'>$paymentNett</td>
          </tr>
          <tr>
            <td class='payment-table-left-column'>Taxes</td>
            <td class='payment-table-right-column required' id='paymentTaxes'>$paymentTaxes</td>
          </tr>
          <tr>
            <td class='payment-table-left-column'>Total</td>
            <td class='payment-table-right-column required' id='total' />
          </tr>
        </table>
      </div>
      <div class='notice'>
        <h3 class='notice-label'>Notice</h3>
        <p class='required' id='notice'>$notice</p>
      </div>
    </div>
  </body>
</html>